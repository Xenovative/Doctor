# AI Provider Configuration
# Set AI_PROVIDER to 'ollama', 'openrouter', or 'openai'
AI_PROVIDER=ollama

# OpenRouter Configuration (only needed if using OpenRouter)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_MAX_TOKENS=4000

# OpenAI Configuration (only needed if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000

# Ollama Configuration (only needed if using Ollama)
OLLAMA_MODEL=llama3.1:8b

# Admin Account Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password_here

# Flask Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=8081
FLASK_DEBUG=True

# WhatsApp Configuration
WHATSAPP_ENABLED=false
WHATSAPP_SOCKET_URL=http://localhost:8086
WHATSAPP_API_KEY=your_whatsapp_api_key_here
WHATSAPP_TARGET_NUMBER=852XXXXXXXX@c.us
WHATSAPP_SESSION_NAME=default

# WhatsApp Server Port (for whatsapp-server.js)
WHATSAPP_PORT=8086

# Chrome/Chromium Path for WhatsApp (Linux/Docker)
CHROME_PATH=/usr/bin/google-chrome-stable
